export class AppComponent {
  title = 'Pret Dashboard';

  constructor(public auth: AuthService) {}

  logout() {
    this.auth.logout();
  }

  toggleSidebar() {
    const sidebar = document.querySelector('.sidebar');
    if (sidebar) sidebar.classList.toggle('collapsed');
  }
}






