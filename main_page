    <script>
        // Time-based theme switching
        function updateTheme() {
            const now = new Date();
            const hour = now.getHours();
            const body = document.body;
            
            // Day: 6 AM to 6 PM (6-18), Night: 6 PM to 6 AM (18-6)
            if (hour >= 6 && hour < 18) {
                body.classList.remove('night');
                body.classList.add('day');
                console.log('Day theme activated');
            } else {
                body.classList.remove('day');
                body.classList.add('night');
                console.log('Night theme activated');
            }
        }

        // Initialize theme on page load
        updateTheme();

        // Update theme every minute
        setInterval(updateTheme, 60000);

        // Navigation item click handler
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Remove active class from all items
                document.querySelectorAll('.nav-item').forEach(navItem => {
                    navItem.classList.remove('active');
                });
                
                // Add active class to clicked item
                this.classList.add('active');
                
                // Add a subtle animation
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });

        // Logout handler
        function handleLogout() {
            const button = event.target.closest('.logout-btn');
            
            // Add loading effect
            button.style.transform = 'scale(0.95)';
            button.innerHTML = '<span>⏳</span><span>Logging out...</span>';
            
            setTimeout(() => {
                alert('Logout functionality would be implemented here');
                button.innerHTML = '<span>🚪</span><span>Logout</span>';
                button.style.transform = '';
            }, 1500);
        }

        // Theme toggle for testing (press T key)
        document.addEventListener('keydown', function(e) {
            if (e.key === 'T' || e.key === 't') {
                const body = document.body;
                if (body.classList.contains('day')) {
                    body.classList.remove('day');
                    body.classList.add('night');
                    console.log('Switched to night theme (manual)');
                } else {
                    body.classList.remove('night');
                    body.classList.add('day');
                    console.log('Switched to day theme (manual)');
                }
            }
        });

        // Mobile sidebar toggle (for future mobile implementation)
        function toggleMobileSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.classList.toggle('mobile-open');
        }

        // Add hover effects to enhance interactivity
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.paddingLeft = '32px';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.paddingLeft = '24px';
            });
        });
    </script>
</body>
