export class AppComponent {
  title = 'Pret Dashboard';
  isCollapsed = false;
  submenuOpen = false;

  constructor(public auth: AuthService) {}

  toggleSidebar() {
    this.isCollapsed = !this.isCollapsed;
  }

  toggleSubmenu() {
    this.submenuOpen = !this.submenuOpen;
  }

  logout() {
    this.auth.logout();
  }
}








